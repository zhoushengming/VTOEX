<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rlRoot"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:clickable="true"
                android:focusable="true">

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:contentDescription="@string/image_not_found"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivPhoto"
        android:layout_toStartOf="@+id/tvCommitNumber"
        android:maxLines="2"
        android:text="@string/app_name"
        android:textColor="@color/colorTitle"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tvNode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvContent"
        android:layout_margin="4dp"
        android:layout_toEndOf="@+id/ivPhoto"
        android:background="@drawable/ic_tag_bg"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:text="@string/app_name"
        android:textColor="@color/colorTag"/>


    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvNode"
        android:layout_margin="4dp"
        android:layout_toEndOf="@+id/tvNode"
        android:background="@drawable/ic_tag_bg"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:text="@string/app_name"/>


    <TextView
        android:id="@+id/tvTimeLoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvNode"
        android:layout_margin="4dp"
        android:layout_toEndOf="@+id/tvUser"
        android:background="@drawable/ic_tag_bg"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:text="@string/app_name"/>


    <TextView
        android:id="@+id/tvLatestCommit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvNode"
        android:layout_margin="4dp"
        android:layout_toEndOf="@+id/tvTimeLoss"
        android:background="@drawable/ic_tag_bg"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:text="@string/app_name"/>


    <TextView
        android:id="@+id/tvCommitNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:background="@drawable/ic_bubble_bg"
        android:padding="4dp"
        android:text="20"
        android:textColor="@color/colorBubble"/>

</RelativeLayout>